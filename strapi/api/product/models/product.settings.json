{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "headline": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "qty": {
      "type": "integer",
      "required": true
    },
    "target": {
      "type": "enumeration",
      "enum": [
        "combination",
        "dry",
        "oily",
        "sensitive"
      ]
    },
    "weight": {
      "type": "decimal"
    },
    "productCollection": {
      "type": "string"
    },
    "rating": {
      "type": "decimal",
      "max": 5,
      "min": 0
    },
    "reviewsCount": {
      "type": "integer"
    },
    "reviews": {
      "collection": "review"
    },
    "categories": {
      "collection": "category",
      "via": "products"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "ingredients": {
      "collection": "ingredient"
    }
  }
}
