    },
    "countInStock": {
      "type": "integer",
      "required": true
    },
    "weight": {
      "type": "integer"
    },
    "categories": {
      "collection": "category",
      "via": "products",
      "dominant": true
    },
    "ingredients": {
      "collection": "ingredient",
      "via": "products",
      "dominant": true
    },
    "reviews": {
      "via": "product",
      "collection": "review"
