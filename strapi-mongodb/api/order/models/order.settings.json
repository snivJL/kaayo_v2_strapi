{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "users_permissions_user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "orders"
    },
    "products": {
      "collection": "product"
    },
    "totalPrice": {
      "type": "decimal",
      "default": 0,
      "required": true,
      "min": 0
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "COD",
        "paypal"
      ],
      "default": "COD",
      "required": true
    },
    "shippingPrice": {
      "type": "decimal",
      "unique": false,
      "required": true,
      "default": 40000,
      "min": 0
    },
    "paidAt": {
      "type": "datetime"
    },
    "sentAt": {
      "type": "datetime"
    },
    "deliveredAt": {
      "type": "datetime"
    },
    "isPaid": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "isDelivered": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "isSent": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "delivered"
      ],
      "default": "pending",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "city": {
      "type": "string",
      "required": true
    },
    "district": {
      "type": "string"
    },
    "ward": {
      "type": "string"
    },
    "postCode": {
      "type": "integer"
    }
  }
}
